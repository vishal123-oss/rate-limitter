{
  "name": "rate-limitter",
  "version": "1.0.0",
  "description": "API Rate Limiter and Logger Service",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint src/**/*.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch"
  },
  "nodemonConfig": {
    "ignore": [
      "data/*",
      "logs/*",
      "coverage/*",
      "*.log",
      "rate-rules.json"
    ],
    "ext": "js,json",
    "watch": [
      "src"
    ]
  },
  "keywords": [
    "rate-limiter",
    "api",
    "logger",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "body-parser": "^1.20.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": ["/node_modules/", "/tests/"]
  }
}
